@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">الرئيسية</h1>

@model List<Employee_Leave_Managent.Data.Roles>

<div class="container">
    <h2 class="text-center">الصلاحيات</h2>

    <p class="text-center">
        <a class="btn btn-primary" asp-action="Create">إضافة صلاحية جديدة</a>
    </p>

    <table id="tblData" class="table table-striped table-bordered" style="text-align:center">
        <thead>
            <tr>
                <th style="text-align:center">اسم الصلاحية </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>