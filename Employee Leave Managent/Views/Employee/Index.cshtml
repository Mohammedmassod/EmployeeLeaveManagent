@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Employee_Leave_Managent.Data.Migrations.Employee>

<div class="container">
    <h2>Employee List</h2>
    <p class="text-center">
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Tax ID</th>
                <th>Date of Birth</th>
                <th>Date Joined</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Firstname</td>
                    <td>@employee.Lastname</td>
                    <td>@employee.TaxId</td>
                    <td>@employee.DateOfBirth.ToShortDateString()</td>
                    <td>@employee.DateJoined.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                        <a class="btn btn-sm btn-success" asp-area="Identity" asp-page="/Account/Register" asp-route-id="@employee.Id">Add Employee as User</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>