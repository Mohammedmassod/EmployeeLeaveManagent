@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Employee_Leave_Managent.Data.Migrations.Employee>

<div class="container">
    <div style="text-align:center">
    <h1>قائمة الموظفين</h1>
    </div>
    <p class="text-center">
        <a class="btn btn-primary" asp-action="Create">إضافة موظف جديد</a>
    </p>

    <table id="tblData" class="table table-striped table-bordered" style="text-align:center">
        <thead>
            <tr>
                <th>الاسم الاول</th>
                <th> اسم العائلة</th>
                <th>الرقم الوظيفي </th>
                <th> تاريخ الميلاد </th>
                <th> تاريخ التوظيف</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Firstname</td>
                    <td>@employee.Lastname</td>
                    <td>@employee.TaxId</td>
                    <td>@employee.DateOfBirth.ToShortDateString()</td>
                    <td>@employee.DateJoined.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@employee.Id">تعديل</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@employee.Id">حذف</a>
                        <a class="btn btn-sm btn-success" asp-area="Identity" asp-page="/Account/Register" asp-route-id="@employee.Id">تفعيل حساب للموظف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>