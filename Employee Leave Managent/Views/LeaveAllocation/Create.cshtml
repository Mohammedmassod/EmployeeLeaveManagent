@model Employee_Leave_Managent.Data.LeaveAllocation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="text-align:center">
    <h2>إضافة تخصيص إجازة لموظف</h2>
    </div>
    <form asp-action="Create" class="form-group" style="text-align:center">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="NumberOfDays"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="DateCreated"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="EmployeeId"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="LeaveTypeId"></label>
                <input asp-for="LeaveTypeId" class="form-control" />
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Period"></label>
            <input asp-for="Period" class="form-control" />
            <span asp-validation-for="Period" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">إنشاء</button>
    </form>
    <div class="text-center mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">رجوع</a>
    </div>
</div>