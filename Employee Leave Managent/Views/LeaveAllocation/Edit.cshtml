@model Employee_Leave_Managent.Models.EditLeaveAllocationVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="text-align:center">

<h1>التحرير @Model.LeaveType.Name تخصيص لـ @Model.Employee.Firstname @Model.Employee.Lastname</h1>

<hr />
</div>
<div     style="margin-right:460px">

    <div class="row" style="text-align:center">
        <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label">عدد الأيام</label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


</div>
<div class="form-group" style="position:inherit; margin-right:100px; margin-left:525px;margin-top:10px;">
    <a class="btn btn-warning btn" asp-controller="LeaveAllocation" asp-action="Index">رجوع </a>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
