@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<h1>@ViewData["Title"]</h1>
<div class="row" >
    <div class="col-md-4" style="text-align:center">
        <section>
            <form id="account" method="post">
                <h4>استخدم حسابًا محليًا لتسجيل الدخول.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="text-align:right">
                    <label asp-for="Input.Email">الإيميل</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="text-align:right">
                    <label asp-for="Input.Password">كلمة السر</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" >تسجيل الدخول</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">نسيت كلمة السر؟</a>
                    </p>
                    <p>
                        @*<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">سجل كمستخدم جديد</a>*@
                    </p>
                </div>
            </form>
        </section>
    </div> 

    <div class="col-md-6 col-md-offset-2">
